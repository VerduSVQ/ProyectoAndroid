<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="pantallaPrincipLCompraVM" type="com.verdusapplication.app.modules.pantallaprinciplcompra.data.viewmodel.PantallaPrincipLCompraVM"/>
    </data>

    <LinearLayout
        android:id="@+id/linearColumnvendedog"
        style="@style/groupStylegray_900_8c"
        android:layout_width="match_parent"
        android:layout_height="734dp"
        android:layout_marginEnd="@dimen/_3pxh"
        android:layout_marginBottom="@dimen/_49pxv"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameStackvendedog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_93pxv"
            android:gravity="start">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                style="@style/groupStylebluegray_100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginBottom="@dimen/_10pxv"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:id="@+id/linearRowvendedog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtVendedog"
                        style="@style/txtInterextrabold28_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4pxv"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_weight="0.61"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{pantallaPrincipLCompraVM.pantallaPrincipLCompraModel.txtVendedog}"
                        tools:text="@string/lbl_vendedog" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCerrarSesin"
                        style="@style/btnSolidRoundedOutline_1"
                        android:layout_width="@dimen/_92pxh"
                        android:layout_height="@dimen/_40pxv"
                        android:layout_marginStart="@dimen/_99pxh"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingStart="@dimen/_8pxh"
                        android:paddingTop="@dimen/_12pxv"
                        android:paddingEnd="@dimen/_5pxh"
                        android:paddingBottom="@dimen/_12pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_cerrar_sesi_n"
                        android:textAllCaps="false"
                        tools:text="@string/lbl_cerrar_sesi_n" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/imageLOGO"
                imageRes="@{@drawable/img_logo_1}"
                android:layout_width="@dimen/_70pxh"
                android:layout_height="@dimen/_54pxh"
                android:layout_gravity="top|start"
                android:layout_marginStart="@dimen/_8pxh"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginBottom="@dimen/_10pxv"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_logo_1" />

            <FrameLayout
                android:id="@+id/frameStackarrowleft"
                style="@style/groupStylegray_400"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40pxv"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="@dimen/_10pxv">

                <ImageView
                    android:id="@+id/imageArrowleft"
                    android:layout_width="@dimen/_10pxh"
                    android:layout_height="@dimen/_18pxh"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="@dimen/_33pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_33pxh"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowleft"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_arrowleft" />
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearPantallaprinci"
            style="@style/groupStylegray_900_8c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_33pxh"
            android:layout_marginTop="@dimen/_19pxv"
            android:layout_marginEnd="@dimen/_30pxh"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearColumnrectangleten"
                style="@style/groupStylebluegray_100cornerRadius"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageRectangleTen"
                    imageRes="@{@drawable/img_rectangle10}"
                    android:layout_width="@dimen/_285pxh"
                    android:layout_height="@dimen/_264pxh"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_29pxh"
                    android:layout_marginTop="@dimen/_28pxv"
                    android:layout_marginEnd="@dimen/_29pxh"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_rectangle10" />

                <LinearLayout
                    android:id="@+id/linearColumnlanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14pxh"
                    android:layout_marginTop="@dimen/_11pxv"
                    android:layout_marginEnd="@dimen/_14pxh"
                    android:layout_marginBottom="@dimen/_21pxv"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtLanguage"
                        style="@style/txtInterextrabold48"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2pxh"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@{pantallaPrincipLCompraVM.pantallaPrincipLCompraModel.txtLanguage}"
                        tools:text="@string/lbl_pastor_belga" />

                    <LinearLayout
                        android:id="@+id/linearRowprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6pxh"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtPrice"
                            style="@style/txtInterblack36"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{pantallaPrincipLCompraVM.pantallaPrincipLCompraModel.txtPrice}"
                            tools:text="@string/lbl_400" />

                        <TextView
                            android:id="@+id/txtMesesCounter"
                            style="@style/txtInterblack20_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_85pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_marginBottom="@dimen/_7pxv"
                            android:layout_weight="0.45"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{pantallaPrincipLCompraVM.pantallaPrincipLCompraModel.txtMesesCounter}"
                            tools:text="@string/lbl_3_meses" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtDescription"
                        style="@style/txtInterextralight20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:text="@{pantallaPrincipLCompraVM.pantallaPrincipLCompraModel.txtDescription}"
                        tools:text="@string/msg_caracter_sticas" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnEliminar"
                        style="@style/btnSolidRoundedOutline_3"
                        android:layout_width="@dimen/_92pxh"
                        android:layout_height="@dimen/_40pxv"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_95pxv"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:paddingStart="@dimen/_22pxh"
                        android:paddingTop="@dimen/_12pxv"
                        android:paddingEnd="@dimen/_23pxh"
                        android:paddingBottom="@dimen/_12pxv"
                        android:singleLine="true"
                        android:text="@string/lbl_eliminar"
                        android:textAllCaps="false"
                        tools:text="@string/lbl_eliminar" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
